# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///instance/database.db

# Application Settings
APP_NAME=Maternal Food Recommendation AI
