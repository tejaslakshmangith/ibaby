# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///instance/database.db

# Application Settings
APP_NAME=Maternal Food Recommendation AI
DEFAULT_LANGUAGE=en

# Security
BCRYPT_LOG_ROUNDS=12

# Session
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# AI Configuration
# Google Gemini API Key for AI-powered features (optional)
# Get your free API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# HuggingFace Configuration (optional)
# Get your free API key from: https://huggingface.co/settings/tokens
# Used for LangChain + HuggingFace AI integration
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
HUGGINGFACE_MODEL=google/flan-t5-base

# AI Configuration (Advanced)
AI_TIMEOUT_SECONDS=2.5
CHATBOT_RATE_LIMIT_PER_MIN=20
CACHE_TTL_SECONDS=3600
